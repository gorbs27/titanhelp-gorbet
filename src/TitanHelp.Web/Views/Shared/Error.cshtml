@model ErrorViewModel

@{
 ViewData["Title"] = "Error";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h1 class="mb-0">
                        <i class="bi bi-exclamation-triangle-fill"></i> Error
                    </h1>
                </div>
                
                <div class="card-body">
                    <h2 class="text-danger">An error occurred while processing your request.</h2>
                    @if (Model.ShowRequestId)
                    {
                        <p class="mt-3">
                            <strong>Request ID:</strong> <code>@Model.RequestId</code>
                        </p>
                    }
                    
                    <div class="alert alert-info mt-4" role="alert">
                        <h4 class="alert-heading">What can you do?</h4>
                        <ul class="mb-0">
                            <li>Go back and try again</li>
                            <li>Return to the <a asp-controller="Tickets" asp-action="Index">home page</a></li>
                            <li>Contact support if the problem persists</li>
                        </ul>
                    </div>
                    
                    <div class="mt-4">
                        <a asp-controller="Tickets" asp-action="Index" class="btn btn-primary">
                            <i class="bi bi-house"></i> Return to Home
                        </a>
                        <button onclick="history.back()" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Go Back
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>