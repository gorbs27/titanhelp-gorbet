@model TitanHelp.Application.DTOs.TicketDto

@{
 ViewData["Title"] = "Ticket Details";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow">
                <div class="card-header bg-info text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h3 class="mb-0">
                            <i class="bi bi-ticket-detailed"></i> Ticket Details
                        </h3>
                        <span class="badge bg-light text-dark fs-6">ID: #@Model.Id</span>
                    </div>
                </div>
                
                <div class="card-body p-4">
                    <div class="row mb-4">
                        <div class="col-md-8">
                            <h2 class="mb-3">@Model.Name</h2>
                        </div>
                        <div class="col-md-4 text-end">
                            @if (Model.Priority == "High")
                            {
                                <span class="badge bg-danger fs-5">
                                    <i class="bi bi-exclamation-triangle-fill"></i> High Priority
                                </span>
                            }
                            else if (Model.Priority == "Medium")
                            {
                                <span class="badge bg-warning text-dark fs-5">
                                    <i class="bi bi-exclamation-circle-fill"></i> Medium Priority
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-info text-dark fs-5">
                                    <i class="bi bi-info-circle-fill"></i> Low Priority
                                </span>
                            }
                        </div>
                    </div>
                    
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h6 class="text-muted mb-2">
                                        <i class="bi bi-calendar3"></i> Date Created
                                    </h6>
                                    <p class="fs-5 mb-0">
                                        @Model.Date.ToString("MMMM dd, yyyy")
                                    </p>
                                    <small class="text-muted">@Model.Date.ToString("hh:mm tt")</small>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-6">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h6 class="text-muted mb-2">
                                        <i class="bi bi-flag"></i> Current Status
                                    </h6>
                                    <p class="fs-5 mb-0">
                                        @if (Model.Status == "Open")
                                        {
                                            <span class="badge bg-success fs-6">
                                                <i class="bi bi-circle-fill"></i> Open
                                            </span>
                                        }
                                        else if (Model.Status == "In Progress")
                                        {
                                            <span class="badge bg-primary fs-6">
                                                <i class="bi bi-hourglass-split"></i> In Progress
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary fs-6">
                                                <i class="bi bi-check-circle-fill"></i> Closed
                                            </span>
                                        }
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="mb-4">
                        <h5 class="mb-3">
                            <i class="bi bi-file-text"></i> Problem Description
                        </h5>
                        <div class="card">
                            <div class="card-body bg-light">
                                <p class="mb-0" style="white-space: pre-wrap;">@Model.ProblemDescription</p>
                            </div>
                        </div>
                    </div>
                    
                    <hr class="my-4" />
                    
                    <div class="d-flex gap-2 justify-content-between">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Back to List
                        </a>
                        <div class="btn-group">
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </div>
                    </div>
                </div>
                
                <div class="card-footer text-muted">
                    <small>
                        <i class="bi bi-clock-history"></i>
                        Last viewed: @DateTime.Now.ToString("MMMM dd, yyyy hh:mm tt")
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>